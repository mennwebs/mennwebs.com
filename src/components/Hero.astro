---
import siteConfig from '../data/site-config';
import { Image } from 'astro:assets';
import m1 from '../content/img/home/menn-running.jpg';
import m2 from '../content/img/home/menn-biking.jpg';
import m3 from '../content/img/home/menn-hiking.jpg';
import m4 from '../content/img/home/menn-pai.jpg';
import m5 from '../content/img/home/menn-working.jpg';
const hero = siteConfig.hero;
---

{
  (hero?.title || hero?.image?.src || hero?.text || (hero?.actions && hero.actions.length > 0)) && (
    <section class='w-full flex flex-col gap-2 mb-16 sm:mb-24'>
      <h1 class='text-3xl font-serif sm:mb-3 font-medium sm:text-5xl '>{hero.title}</h1>
      <h2 class='text-xl sm:text-[2rem] font-serif'>living in the mountains of Pai, Thailand.</h2>
    </section>
  )
}

<div class='mb-16 sm:mb-20 mx-[calc(50%-50vw)]'>
  <div
    class='-my-4 flex justify-center gap-4 py-4 overflow-hidden md:gap-6 lg:gap-8 *:relative *:aspect-[9/10] *:w-36 *:flex-none *:overflow-hidden *:rounded-xl *:shadow *:sm:w-44 *:sm:rounded-2xl *:md:w-72 *:lg:w-64 *:xl:w-80'
  >
    <div class='rotate-2 hidden sm:block'>
      <Image src={m1} alt='Menn Running' class='absolute inset-0 h-full w-full object-cover' widths={[352, 640]} quality={70} />
    </div>
    <div class='-rotate-2'>
      <Image src={m2} alt='Menn Biking' class='absolute inset-0 h-full w-full object-cover' widths={[352, 640]} quality={70} loading='eager' decoding='sync' />
    </div>
    <div class='rotate-1'>
      <Image
        src={m3}
        alt='Road to Pai, Thailand'
        class='absolute inset-0 h-full w-full object-cover'
        widths={[352, 640]}
        quality={70}
        loading='eager'
        decoding='sync'
      />
    </div>
    <div class='-rotate-1'>
      <Image
        src={m4}
        alt='Menn at Seed Webs office'
        class='absolute inset-0 h-full w-full object-cover'
        widths={[352, 640]}
        quality={70}
        loading='eager'
        decoding='sync'
      />
    </div>
    <div class='rotate-1 hidden sm:block'>
      <Image src={m5} alt='Menn on the mountains' class='absolute inset-0 h-full w-full object-cover' widths={[352, 640]} quality={70} />
    </div>
  </div>
</div>
